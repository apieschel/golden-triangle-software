---
pagination:
  data: posts
  size: 5
layout: layout.njk
title: Latest Posts
---
<div class="circle">
	<i class="fa fa-cog" aria-hidden="true"></i>
</div>

<h1>Golden Triangle Software: Web Development Portfolio</h1>
<hr>

<section id="projects">
  {%- for item in pagination.items %}
	<h2>{{ item.title.rendered }}</h2>

	<div class="project-container">
		<a href="#" target="_blank">
			<img width="890" height="938" src="{{ item._embedded['wp:featuredmedia'][0].media_details.sizes.full.source_url }}">
		</a>
		
		<div class="project-tile">
			{{ item.content.rendered | safe }}
		</div>
	</div>

	<hr>
  {% endfor -%}
</section>